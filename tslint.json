{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "no-console": false,
        "arrow-parens": [true, "ban-single-arg-parens"],
        "quotemark": [true, "single", "avoid-escape", "avoid-template"],
        "trailing-comma": [
            true,
            {
              "multiline": {
                "objects": "always",
                "arrays": "always",
                "functions": "never",
                "typeLiterals": "ignore"
              },
              "esSpecCompliant": true
            }
          ]
    },
    "rulesDirectory": []
}